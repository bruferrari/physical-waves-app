                    android:id="@+id/text_content_01_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/ttl_Ressonacia_1_3"
                    android:textSize="20sp"
                    android:layout_below="@id/text_content_01_2"/>

                <TextView
                    android:id="@+id/text_content_01_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/txt_Ressonacia_1_4"
                    android:textSize="20sp"
                    android:layout_below="@id/text_content_01_3"/>

                <!-- Segundo Assunto -->

                <TextView
                    android:id="@+id/chapter_title_02"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/ttl_Ressonacia_2"
                    android:textSize="20sp"
                    android:layout_below="@id/text_content_01_4"/>

                <TextView
                    android:id="@+id/text_content_02"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/txt_Ressonacia_2_1"
                    android:textSize="20sp"
                    android:layout_below="@id/chapter_title_02"/>

                <!-- Terceiro Assunto -->

                <TextView
                    android:id="@+id/chapter_title_03"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/ttl_Ressonacia_3"
                    android:textSize="20sp"
                    android:layout_below="@id/text_content_02"/>

                <TextView
                    android:id="@+id/text_content_03_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
