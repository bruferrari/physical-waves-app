                    android:layout_below="@id/text_content_05_2"/>

                <!-- Sexto Assunto -->

                <TextView
                    android:id="@+id/chapter_title_06"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/ttl_Ressonacia_6"
                    android:textSize="20sp"
                    android:layout_below="@id/text_content_05_3"/>

                <TextView
                    android:id="@+id/text_content_06_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/txt_Ressonacia_6_1"
                    android:textSize="20sp"
                    android:layout_below="@id/chapter_title_06"/>

                <TextView
                    android:id="@+id/text_content_06_2"
                    android:layout_width="match_parent"
