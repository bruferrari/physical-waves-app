<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MaterialActivity"
    android:background="@drawable/material_bg">

    <TextView
        android:id="@+id/material_instructions"
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:text="@string/material_instructions"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="105dp" />

    <LinearLayout
        android:id="@+id/clickable_area"
        android:orientation="horizontal"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/material_instructions"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/clickable_area2"
        android:layout_width="400dp"
        android:orientation="horizontal"
        android:layout_height="90dp"
        android:layout_below="@+id/clickable_area"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/clickable_area3"
        android:layout_width="400dp"
        android:orientation="horizontal"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/clickable_area4"
        android:layout_width="400dp"
        android:orientation="horizontal"
        android:layout_height="90dp"
        android:layout_below="@+id/clickable_area3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false" />

    <LinearLayout
        android:id="@+id/clickable_area5"
        android:layout_width="400dp"
        android:orientation="horizontal"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="73dp" />

</RelativeLayout>