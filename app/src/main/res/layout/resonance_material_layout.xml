                <TextView
                    android:id="@+id/text_content_09_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/txt_Ressonacia_9_2"
                    android:textSize="20sp"
                    android:layout_below="@id/text_content_09_1"/>

                <TextView
                    android:id="@+id/text_content_09_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/txt_Ressonacia_9_3"
                    android:textSize="20sp"
                    android:layout_below="@id/text_content_09_2"/>

                <TextView
                    android:id="@+id/text_content_09_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/txt_Ressonacia_9_4"
                    android:textSize="20sp"
                    android:layout_below="@id/text_content_09_3"/>

            </RelativeLayout>


        </ScrollView>

    </RelativeLayout>
</RelativeLayout>


