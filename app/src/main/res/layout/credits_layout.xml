<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/credits_bg">

    <ImageButton
        android:id="@+id/credits_team_btn"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/credits_team"
        android:layout_marginStart="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/credits_recommended_btn"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:background="@drawable/credits_recommended"
        android:layout_marginBottom="83dp"
        android:layout_above="@+id/credits_team_btn"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/credits_references_btn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/credits_references"
        android:layout_above="@+id/credits_team_btn"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/credits_bibliography_btn"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:background="@drawable/credits_bibliography"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/credits_team_btn" />

    <ImageView
        android:id="@+id/credits_info_img"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@drawable/credits_info"
        android:layout_marginEnd="48dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>