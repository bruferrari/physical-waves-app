                    android:layout_below="@id/chapter_title_03"/>

                <TextView
                    android:id="@+id/text_content_03_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/txt_Ressonacia_3_2"
                    android:textSize="20sp"
                    android:layout_below="@id/text_content_03_1"/>

                <!-- Quarto Assunto -->

                <TextView
                    android:id="@+id/chapter_title_04"
