<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/main_screen"
    android:focusable="false">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:background="@drawable/yellow_baloon"
        android:layout_marginBottom="199dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="84dp"
        android:layout_marginEnd="84dp"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/material"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/menu_material"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="15dp"
            android:textAllCaps="true"
            android:textSize="22sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:background="@drawable/yellow_baloon_top"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="70dp"
        android:id="@+id/linearLayout2">

        <TextView
            android:id="@+id/credits"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/menu_credits"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingTop="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:textAllCaps="true"
            android:textSize="22sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:background="@drawable/yellow_baloon_top"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="70dp"
        android:id="@+id/linearLayout3">

        <TextView
            android:id="@+id/videos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/menu_videos"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingTop="60dp"
            android:gravity="center_vertical|center_horizontal"
            android:textAllCaps="true"
            android:textSize="22sp" />


    </LinearLayout>

</RelativeLayout>
