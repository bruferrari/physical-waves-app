<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MaterialActivity"
    android:background="@drawable/material_bg">

    <LinearLayout
        android:id="@+id/clickable_area"
        android:orientation="horizontal"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_above="@+id/clickable_area2"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/clickable_area2"
        android:layout_width="400dp"
        android:orientation="horizontal"
        android:layout_height="90dp"
        android:layout_above="@+id/clickable_area3"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/clickable_area3"
        android:layout_width="400dp"
        android:orientation="horizontal"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/clickable_area4"
        android:layout_width="400dp"
        android:orientation="horizontal"
        android:layout_height="90dp"
        android:layout_below="@+id/clickable_area3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false" />

    <LinearLayout
        android:id="@+id/clickable_area5"
        android:layout_width="400dp"
        android:orientation="horizontal"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="73dp" />

    <RelativeLayout
        android:layout_width="420dp"
        android:layout_height="500dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/material_instructions"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:text="@string/material_instructions"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginTop="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/material_progress"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/material_loading_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="@string/loading_text"
            android:layout_above="@+id/material_progress"
            android:layout_alignStart="@+id/material_progress" />

    </RelativeLayout>



</RelativeLayout>